# Production Environment Configuration
# Uses paid services for reliability and performance

# Database (AWS RDS or managed PostgreSQL)
DATABASE_URL=postgresql://user:password@prod-db-host:5432/up2d8

# Redis (AWS ElastiCache or managed Redis)
REDIS_URL=redis://prod-redis-host:6379/0

# LLM Provider Configuration
LLM_PROVIDER=anthropic  # or openai
LLM_MODEL=claude-sonnet-4.5

# API Keys
ANTHROPIC_API_KEY=your_production_anthropic_key
OPENAI_API_KEY=your_production_openai_key

# Embeddings
EMBEDDING_PROVIDER=openai  # or voyage
EMBEDDING_MODEL=text-embedding-3-large

# Vector Database
VECTOR_DB_PROVIDER=pinecone
PINECONE_API_KEY=your_pinecone_key
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX_NAME=up2d8-prod

# Email Service
EMAIL_PROVIDER=ses
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
SES_SENDER_EMAIL=noreply@up2d8.ai

# JWT Configuration (generate secure key)
JWT_SECRET_KEY=generate_secure_key_with_openssl_rand_base64_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# CORS
CORS_ORIGINS=https://app.up2d8.ai,https://www.up2d8.ai

# Feature Flags
ENABLE_CHAT=true
ENABLE_WEB_SEARCH=true
ENABLE_REAL_TIME_SCRAPING=true

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Monitoring
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=production

# Cost Optimization
USE_CACHE_AGGRESSIVELY=true
MAX_ARTICLES_PER_SCRAPE=100
SUMMARIZATION_BATCH_SIZE=20
