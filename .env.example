# UP2D8 Monorepo Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# Azure Configuration (Backend & Functions)
# ============================================

# Azure Key Vault URI for secrets management
KEY_VAULT_URI=https://your-keyvault-name.vault.azure.net/

# ============================================
# Backend API Configuration
# ============================================

# MongoDB Connection (from Key Vault in production)
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/
MONGODB_DATABASE=up2d8

# Google Gemini API (from Key Vault in production)
GEMINI_API_KEY=your-gemini-api-key-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# ============================================
# Azure Functions Configuration
# ============================================

# Backend API URL (for Functions to call Backend)
BACKEND_API_URL=http://localhost:8000

# Email Configuration (from Key Vault in production)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com

# LLM Provider Configuration
LLM_PROVIDER=gemini  # Options: gemini, openai, anthropic
OPENAI_API_KEY=your-openai-key-if-using-openai
ANTHROPIC_API_KEY=your-anthropic-key-if-using-anthropic

# Azure Functions Configuration
AzureWebJobsStorage=UseDevelopmentStorage=true  # For local development

# ============================================
# Mobile App Configuration
# ============================================

# Backend API endpoint
REACT_APP_API_URL=http://localhost:8000/api

# Feature flags
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_ANALYTICS=false

# ============================================
# Development Tools
# ============================================

# Environment
NODE_ENV=development
PYTHON_ENV=development

# Logging
LOG_LEVEL=debug

# ============================================
# Optional: Local LLM (Ollama)
# ============================================

# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2

# ============================================
# Security (NEVER commit actual secrets!)
# ============================================

# In production, use Azure Key Vault or similar
# In development, use this file (but keep it in .gitignore)
