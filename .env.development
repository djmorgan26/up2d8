# Development Environment Configuration
# Use free/local services for cost-effective development

# Database (local PostgreSQL via Docker)
DATABASE_URL=postgresql://up2d8:up2d8_dev_password@localhost:5432/up2d8

# Redis (local via Docker)
REDIS_URL=redis://localhost:6379/0

# LLM Provider Configuration
# Options: huggingface, ollama, groq, anthropic, openai
LLM_PROVIDER=ollama
LLM_MODEL=llama3.2:3b  # Fast, local, free

# Hugging Face (if using HF provider)
HUGGINGFACE_API_KEY=  # Optional - free tier available
HUGGINGFACE_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# Ollama Configuration (local, completely free)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b  # or mistral, phi3, etc.

# Groq (free tier - fast inference)
GROQ_API_KEY=  # Get free API key from console.groq.com
GROQ_MODEL=llama-3.1-8b-instant

# Production LLM Keys (leave empty for dev)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Embeddings Configuration
# Options: sentence-transformers (local/free), openai, voyage
EMBEDDING_PROVIDER=sentence-transformers
EMBEDDING_MODEL=all-MiniLM-L6-v2  # Fast, 384 dimensions

# Vector Database
# Options: chroma (local/free), pgvector (postgres extension), pinecone
VECTOR_DB_PROVIDER=chroma
CHROMA_PATH=./data/chroma  # Local storage

# Pinecone (production only)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=

# Email Service
# Options: console (logs only), mailgun, brevo, mailersend, ses
EMAIL_PROVIDER=console  # Just log to console in dev
EMAIL_FROM=dev@up2d8.local

# Mailgun (free tier: 5,000 emails/month)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# Brevo/Sendinblue (free tier: 300 emails/day)
BREVO_API_KEY=

# AWS SES (production only)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
SES_SENDER_EMAIL=

# JWT Configuration
JWT_SECRET_KEY=dev_secret_key_change_in_production_12345678901234567890
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Feature Flags
ENABLE_CHAT=true
ENABLE_WEB_SEARCH=false  # Disable to save on API costs
ENABLE_REAL_TIME_SCRAPING=false  # Use cached data in dev

# Rate Limiting (relaxed for dev)
RATE_LIMIT_ENABLED=false

# Monitoring (optional in dev)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Cost Optimization
USE_CACHE_AGGRESSIVELY=true  # Cache LLM responses
MAX_ARTICLES_PER_SCRAPE=10  # Limit data volume in dev
SUMMARIZATION_BATCH_SIZE=5
